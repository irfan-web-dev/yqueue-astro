    padding: 4px;
    font-size: 14px;
    font-weight: 500;
    margin-left: 5px;
  }

  .sub-nav-links a:hover {
    color: rgb(0, 0, 121);
    border: #5e5985 2px solid;
  }

  .sub-nav-content h2 {
    font-size: 38px;
  }

  .sub-nav-content a {
    font-size: 15px;
    text-decoration: none;
    color: #2557d6;
    font-weight: 500;
  }

  .sub-nav-content a:hover {
    color: #002fae;
  }

  .sub-nav-content {
    padding-top: 64px;
    padding-bottom: 90px;
  }

  .app-order {
    padding-top: 80px;
    padding-bottom: 70px;
  }

  .app-order h2 {
    font-size: 38px;
  }

  .app-order a {
    font-size: 15px;
    text-decoration: none;
    color: #2557d6;
    font-weight: 500;
  }

  .app-order a:hover {
    color: #002fae;
  }

  .qr-dining {
    background-color: #f9f9fb;
    padding-top: 80px;
    padding-bottom: 70px;
  }

  .qr-dining h2 {
    font-size: 38px;
  }

  .qr-dining a {
    font-size: 15px;
    text-decoration: none;
    color: #2557d6;
    font-weight: 500;
  }

  .qr-dining a:hover {
    color: #002fae;
  }

  .footer-content a {
    text-decoration: none;
    color: white;
    font-size: 15px;
  }

  .footer-content {
    background-color: #0d072f;
  }

  .footer-content-2 {
    background-color: #191339;
    color: white;
  }

  .footer-content-2 a {
    text-decoration: none;
    color: white;
    font-size: 15px;
  }

  .footer-content-2 img {
    height: 38px;
    width: 38px;
    margin-left: 6px;
    cursor: pointer;
  }
</style>
