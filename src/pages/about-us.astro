<style>
  .about-us-hero {
    padding-top: 90px;
    padding-bottom: 90px;
  }

  .about-us-hero span {
    background-color: #ffe7d6;
    font-weight: 500;
    color: #d75e0a;
    font-size: 12px;
    border-radius: 100px;
    padding: 4px 8px;
  }

  .about-us-hero h1 {
    font-size: 60px;
  }

  .about-us-hero h2 {
    font-size: 37px;
    margin-bottom: 16px;
  }

  .about-us-hero img {
    border-radius: 10px;
    object-fit: cover;
    box-shadow: 8px 8px 0 #dbdae0;
    height: 442px;
    width: 442px;
  }

  .about-us-logos {
    padding: 48px 0;
    background-color: #0d072f;
    overflow: hidden;
  }

  .about-us-logos h4 {
    color: white;
    font-size: 20px;
    text-align: center;
    margin: 0 0 40px;
  }

  .logos-sliders img {
    height: 104px;
    width: 104px;
  }

  .about-us-content {
    background: linear-gradient(95deg, #2557d6 0%, #8824be 101%);
    overflow: hidden;
  }

  .about-us-content p {
    font-size: 38px;
    color: white;
    padding-top: 100px;
    cursor: pointer;
    margin-bottom: 50px;
  }

  .about-us-content h4 {
    color: white;
    margin-bottom: 64px;
    font-size: 12px;
    letter-spacing: 1.5px;
    cursor: pointer;
  }

  .about-us-indicators {
    gap: 27px;
  }

  .about-us-indicators button {
    background-color: #9590e9;
    overflow: visible;
    outline: 0;
    border: 0;
    height: 12px;
    width: 12px;
    border-radius: 100%;
    text-transform: none;
  }

  .indicator button {
    background-color: #ffffff;
    overflow: visible;
    outline-offset: 2px;
    outline: 2px solid #9590e9;
    height: 13px;
    width: 40px;
    border-radius: 10px;
  }

  .about-us-partners-content {
    padding-top: 90px;
    padding-bottom: 75px;
  }

  .about-us-partners-content h3 {
    margin-bottom: 18px;
    font-size: 38px;
  }

  .about-us-details {
    border-bottom: 1px solid #dbdae0;
    padding-bottom: 64px;
  }

  .about-us-details h4 {
    font-size: 23px;
    margin-bottom: 16px;
    margin-top: 16px;
  }

  .about-us-partner-image {
    width: 188px;
    height: 188px;
    border-radius: 10px;
    border: 1px solid #dbdae0;
    box-shadow: 8px 8px 0 #dbdae0;
  }

  @media (max-width: 768px) {
    .about-us-partner-image {
      width: 400px;
      height: 252px;
    }
  }

  .about-us-details a {
    text-decoration: none;
    color: #2562e2;
    font-weight: 500;
  }

  .about-us-details a:hover {
    color: #002fae;
  }
</style>
