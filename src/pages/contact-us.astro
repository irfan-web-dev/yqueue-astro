---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <main class="">
    <div class="section-1 container-fluid">
      <div class="">
        <div class="row p-5">
          <div class="col-12 col-lg-6 d-flex align-items-center mr-lg-5 mb-5 mb-lg-0">
            <div class="contact-details mx-auto mx-lg-0 text-center text-lg-start">
              <h2 class="fs-1 mb-5">Contact Us</h2>
              <p class="mb-5">Have a question or a comment? Reach out to us using any of the below details.</p>
              <div class="contact-info d-flex gap-4 flex-wrap flex-lg-column justify-content-center">
                <div class="d-flex gap-3 align-items-center">
                  <img src="/images/phone.png" alt="" />
                  <p class="m-0">+923045853883</p>
                </div>
                <div class="d-flex gap-3 align-items-center">
                  <img src="/images/mail.png" alt="" />
                  <p class="m-0">irfan.dev03@gmail.com</p>
                </div>
                <div class="d-flex gap-3 align-items-center">
                  <img src="/images/location.png" alt="" />
                  <p class="m-0">Model Town Lahore , D-Block , Pakistan</p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-6">
            <div class="contact-form mx-auto mx-lg-0">
              <div class="mb-5">
                <h4>Send Enquiry</h4>
                <p>We will get back to you within 5 working days.</p>
              </div>
              <form>
                <div class="form-field">
                  <label for="name">Name</label>
                  <input type="text" id="name" placeholder="not specified" />
                </div>
                <div class="form-field">
                  <label for="email">Email</label>
                  <input type="email" id="email" placeholder="not specified" />
                </div>
                <div class="form-field">
                  <label for="message">Message</label>
                  <textarea id="message" rows="3" placeholder="not specified"></textarea>
                </div>
                <div>
                  <p>
                    This site is protected by reCAPTCHA and the Google
                    <a href="#">Privacy Policy</a> and
                    <a href="#">Terms of Service</a> apply.
                  </p>
                </div>
                <div class="d-flex justify-content-end">
                  <button>Send</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <style>
    * {
      outline-color: #75a7ff;
    }

    .section-1 {
      background: linear-gradient(157deg, #2557d6 0%, #8824be 100%);
      padding-left: 70px;
      padding-right: 70px;
      padding-top: 80px;
      padding-bottom: 80px;
    }

    .contact-details {
      color: white;
    }

    .contact-info img {
      height: 24px;
      width: 24px;
    }

    .contact-info p {
      text-transform: uppercase;
      font-weight: bold;
    }

    .contact-form {
      background-color: white;
      padding: 40px;
      border-radius: 16px;
      box-shadow: 1px 1px 8px rgb(13 7 47 / 24%);
      max-width: 565px;
    }

    .form-field {
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;
    }

    .form-field input,
    .form-field textarea {
      background-color: #f3f3f5;
      border: 1px solid #e7e6ea;
      padding: 7px;
      border-radius: 4px;
    }

    .form-field input::placeholder,
    .form-field textarea::placeholder {
      color: #aaa8b6;
    }

    .form-field textarea {
      resize: none;
    }

    .form-field:has(input:focus) label {
      color: #75a7ff;
    }

    .form-field:has(textarea:focus) label {
      color: #75a7ff;
    }

    .contact-form button {
      margin-top: 30px;
      background-color: #2557d6;
      box-shadow: 1px 1px 8px rgb(13 7 47 / 24%);
      border: none;
      border-radius: 8px;
      padding: 8px 12px;
      color: white;
      font-size: 14px;
      font-weight: 600;
    }

    .contact-form button:hover {
      background-color: #002fae;
    }

    .contact-form a {
      text-decoration: none;
    }

    .contact-form p {
      font-size: 14px;
    }

    .contact-form h4 {
      font-size: 23px;
    }

    .form-field label {
      margin-bottom: 7px;
    }
  </style>
</Layout>
